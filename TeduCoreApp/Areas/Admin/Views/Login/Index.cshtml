@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Gentelella Alela! | </title>

    <link href="~/admin-side/libs/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/lib/nprogress/nprogress.css" rel="stylesheet" />
    <link href="~/admin-side/libs/animate.css/animate.css" rel="stylesheet" />
    <link href="~/admin-side/css/custom.css" rel="stylesheet" />
</head>

<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form id="frmLogin">
                        @Html.AntiForgeryToken()
                        <h1>Login Form</h1>
                        <div>
                            <input type="text" data-required=true name="userName" class="form-control" placeholder="Tên đăng nhập"  id="txtUserName" />
                        </div>
                        <div>
                            <input type="password" data-required=true name="password" class="form-control" placeholder="Mật khẩu"  id="txtPassword" />
                        </div>
                        <div>
                            <a class="btn btn-default submit" href="#" id="btnLogin">Đăng nhập</a>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">

                            <div>
                                <h1><i class="fa fa-paw"></i> Gentelella Alela!</h1>
                                <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/admin-side/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/admin-side/libs/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/admin-side/libs/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/admin-side/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/admin-side/libs/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/admin-side/libs/jquery-validation/dist/localization/messages_vi.js"></script>
    <script src="~/admin-side/libs/notifyjs/notify.js"></script>
    <script src="~/admin-side/app/shared/tedu.js"></script>
    <script src="~/admin-side/app/controller/login/index.js"></script>
    <script>
        var login = new loginController();
        login.initialize();
    </script>
</body>
</html>
