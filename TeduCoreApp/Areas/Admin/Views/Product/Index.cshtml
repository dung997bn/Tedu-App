
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/admin-side/libs/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/admin-side/app/controller/product/quantity-management.js" asp-append-version="true"></script>
    <script src="~/admin-side/app/controller/product/image-management.js" asp-append-version="true"></script>
    <script src="~/admin-side/app/controller/product/whole-price-management.js"></script>
    <script src="~/admin-side/app/controller/product/index.js" asp-append-version="true"></script>
    <script>
        var product = new productController();
        product.initialize();
    </script>
}

@section Styles{
    <link href="~/admin-side/libs/jQuery-EasyUI/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/admin-side/libs/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="title_left">
        <h3>Product</h3>
    </div>

    <div class="title_right">
        <div class="col-md-7 col-sm-12  form-group pull-right">
            <button id="btnCreate" class="btn btn-success">Create</button>
            <a class="btn btn-danger" href="~/admin-side/templates//ProductImportTemplate.xlsx">Template</a>
            <button class="btn btn-primary" id="btn-import" type="button"><i class="fa fa-file-excel-o"></i></button>
            <button class="btn btn-default" id="btn-export" type="button"><i class="fa fa-forward"></i></button>
        </div>
        <div class="col-md-3 col-sm-12  form-group pull-left top_search mt-sm">
            <select class="form-control" id="ddlCategorySearch">
                <option>--Select category--</option>
            </select>
        </div>

        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" id="txtKeyword" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="btnSearch">Go!</button>
                </span>
            </div>
        </div>


    </div>
</div>

<div class="clearfix"></div>



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="10%">#</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Created Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content">
                    </tbody>
                </table>

                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>


<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <th scope="row">
            <button class="btn btn-default btn-sm btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-sm btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></button>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-images"><i class="fa fa-image"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-quantity"><i class="fa fa-hourglass-start"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-whole-price"><i class="fa fa-money"></i></a>
        </th>
        <td>{{Name}}</td>
        <td>{{CategoryName}}</td>
        <td>{{Price}}</td>
        <td>{{{Image}}}</td>
        <td>{{CreatedDate}}</td>
        <td>{{{Status}}}</td>
    </tr>
</script>


<partial name="_AddEditModal.cshtml" model="null" />
<partial name="_ImportExcelModal.cshtml" model="null" />
<partial name="_QuantityManagement.cshtml" model="null" />
<partial name="_ImageManagement.cshtml" model="null" />
