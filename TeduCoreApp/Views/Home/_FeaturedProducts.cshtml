@model HomeViewModel
<div class="container">
    <!-- Product Tabs-->
    <div class="category-product">
        <div class="navbar nav-menu">
            <div class="navbar-collapse">
                <div class="jtv-title">
                    <h2>Featured Products</h2>
                </div>
                <ul class="nav navbar-nav">
                    @foreach (var item in Model.HomeCategories)
                    {
                        <li class=@(item.Id==1?"active":"")><a data-toggle="tab" href="#tab-@(item.Id)">@item.Name</a> </li>
                    }
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <div class="tab-container">

            @foreach (var categoy in Model.HomeCategories)
            {
                var listProduct = categoy.Products.ToList().Count > 4 ? categoy.Products.ToList().GetRange(0, 4) : categoy.Products.ToList();
                <!-- tab product -->
                <div class="tab-panel active" id="tab-@categoy.Id">
                    <div class="category-products">
                        <ul class="products-grid">
                            @foreach (var product in listProduct)
                            {
                                var url = "/" + product.SeoAlias + "-p." + product.Id + ".html";
                                <li class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                    <div class="item-inner">
                                        <div class="item-img">
                                            <div class="item-img-info">
                                                <a class="product-image" title="@product.Name" href="@url"> <img alt="@product.Name" src="@product.Image"> </a>
                                                <div class="jtv-box-hover">
                                                    <ul class="add-to-links">
                                                        <li><a class="link-quickview" href="quick_view.html"><i class="icon-magnifier-add icons"></i><span class="hidden">Quick View</span></a></li>
                                                        <li><a class="link-wishlist" href="wishlist.html"><i class="icon-heart icons"></i><span class="hidden">Wishlist</span></a></li>
                                                        <li><a class="link-compare" href="compare.html"><i class="icon-shuffle icons"></i><span class="hidden">Compare</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info">
                                            <div class="info-inner">
                                                <div class="item-title"> <a title="@product.Name" href="@url"> @product.Name</a><div class="new-label new-top-left">new</div> </div>
                                                <div class="item-content">
                                                    <div class="rating"> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> </div>
                                                    <div class="item-price">
                                                        <div class="price-box"> <span class="regular-price"> <span class="price">@product.Price.ToString("N0")</span> </span> </div>
                                                    </div>
                                                    <div class="action">
                                                        <button class="button btn-cart" type="button" title="" data-original-title="Add to Cart"><span>Add to Cart</span> </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }


                        </ul>
                    </div>
                </div>
            }


        </div>
    </div>
</div>